<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff"
    >
    <!-- 左边-开始 -->
    <LinearLayout
        android:id="@+id/include_linear_left"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="horizontal"
            android:layout_weight="2"
            >
            <LinearLayout
                android:id="@+id/include_ding"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="75dp"
                android:orientation="vertical"
                >

                <!-- 题干部分的容器-开始 -->
                <LinearLayout
                    android:id="@+id/include_linear_left_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="6"
                    >

                    <WebView
                        android:id="@+id/include_itemPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <!-- 题干部分的容器-结束 -->
                <!-- 答题部分的容器-开始 -->

                <LinearLayout
                    android:id="@+id/include_linear_left_middle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    >
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <!-- 答题部分的容器-结束 -->
        <!-- 提交部分的容器-开始 -->
        <LinearLayout
            android:id="@+id/include__linear_left_bottom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="8"
            android:gravity="center"

            >

            <LinearLayout
                android:id="@+id/include_linear_left_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/include_submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg2"
                    />

            </LinearLayout>

        </LinearLayout>
        <!-- 提交部分的容器-结束 -->
        <!-- 提交部分的容器-结束 -->

    </LinearLayout>



</LinearLayout>
