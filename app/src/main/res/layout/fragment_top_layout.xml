<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="47dp"
        android:id="@+id/updatetakephone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="47dp"
        android:background="@drawable/upwrongtest_button"

        />

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewss"
        android:layout_marginLeft="25dp"
        android:layout_toEndOf="@+id/textViewss"
        android:layout_toRightOf="@+id/textViewss"
        android:text="..."
        android:textSize="20sp"
        android:textColor="#ffffff"/>

    <TextView
        android:text="姓名："
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewss"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/updatetakephone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>