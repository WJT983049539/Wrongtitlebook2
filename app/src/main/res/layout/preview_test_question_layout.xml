<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        >
<!--<HorizontalScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--&gt;-->


    <!-- 有横向滚动条的上面的布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

         <LinearLayout
             android:id="@+id/shwo_content_linear"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="0dp"
                     android:layout_weight="1"
                     android:background="#66ff8c"
                     >

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <TextView
                   android:text="题型:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="16dp"
                   android:id="@+id/textView3"
                   android:layout_alignBaseline="@+id/exercise_test_type"
                   android:layout_alignBottom="@+id/exercise_test_type"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_marginStart="16dp" />

               <TextView
                   android:text="吃饭的艺术"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:id="@+id/exercise_test_type"
                   android:layout_marginStart="20dp"
                   android:layout_alignBaseline="@+id/textView5"
                   android:layout_alignBottom="@+id/textView5"
                   android:layout_toRightOf="@+id/textView3"
                   android:layout_toEndOf="@+id/textView3" />

               <TextView
                   android:text="知识点:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="30dp"
                   android:id="@+id/textView5"
                   android:layout_marginStart="30dp"
                   android:layout_centerVertical="true"
                   android:layout_toRightOf="@+id/exercise_test_type"
                   android:layout_toEndOf="@+id/exercise_test_type" />

               <TextView
                   android:text="怎么用舌头咬馍馍"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/exercise_knowledgePointName"
                   android:layout_marginLeft="13dp"
                   android:layout_marginStart="13dp"
                   android:layout_alignBottom="@+id/textView5"
                   android:layout_toRightOf="@+id/textView5"
                   android:layout_toEndOf="@+id/textView5" />




               <TextView
                   android:text="难度等级:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/textView9"
                   android:layout_marginLeft="31dp"
                   android:layout_marginStart="31dp"
                   android:layout_alignTop="@+id/exercise_xingxingimageView"
                   android:layout_toRightOf="@+id/exercise_knowledgePointName"
                   android:layout_toEndOf="@+id/exercise_knowledgePointName" />

               <ImageView
                   android:id="@+id/exercise_xingxingimageView"
                   android:layout_width="80dp"
                   android:layout_height="20dp"
                   android:layout_marginLeft="28dp"
                   android:layout_marginStart="28dp"
                   app:srcCompat="@drawable/yikexing"
                   android:layout_alignTop="@+id/exercise_knowledgePointName"
                   android:layout_toRightOf="@+id/textView9"
                   android:layout_toEndOf="@+id/textView9" />


           </RelativeLayout>
                 </LinearLayout>


                 <!--这里是显示题的区域-->
                 <LinearLayout

                     android:layout_width="match_parent"
                     android:layout_height="0dp"
                     android:layout_weight="9"
                     android:orientation="horizontal">

                     <LinearLayout
                         android:id="@+id/preiview_test_show_fragment"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="9.7"
                         android:orientation="horizontal">

                     </LinearLayout>
                     <LinearLayout
                         android:id="@+id/startanswer_explanation"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="0.3"
                         android:orientation="horizontal"
                         android:background="@drawable/vs"
                         >


                     </LinearLayout>

                 </LinearLayout>


             </LinearLayout>

         </LinearLayout>




    </LinearLayout>

<!--</HorizontalScrollView>-->

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/close_button2"
                    android:layout_marginRight="218dp"
                    android:layout_marginEnd="218dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/exercise"
                    android:layout_toStartOf="@+id/exercise"
                    android:background="@drawable/returnbutton_bg"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exercise"
                    android:layout_marginRight="225dp"
                    android:layout_marginEnd="225dp"
                    android:background="@drawable/exercise_button_bg"
                    android:layout_alignBaseline="@+id/close_button2"
                    android:layout_alignBottom="@+id/close_button2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/bg"
            >

        </LinearLayout>





    </LinearLayout>
    </LinearLayout>

        <!-- 左边弹出布局区 -->
    <LinearLayout
                 android:layout_width="350dp"
                 android:layout_height="match_parent"
                 android:orientation="horizontal"
                 android:layout_gravity="right"
                 >
        
        <LinearLayout
            android:id="@+id/huadongmenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/vs">

        </LinearLayout>
        <LinearLayout
         android:id="@+id/answer_explanation"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
            android:background="#ffffff"
           >

        </LinearLayout>
             </LinearLayout>


    </android.support.v4.widget.DrawerLayout>
</LinearLayout>