<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#5a87da">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="37dp"
                android:id="@+id/imageView4"
                android:layout_alignBottom="@+id/selse_studentname"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/student"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/selse_studentname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textSize="16sp"
                android:textColor="#fff"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp" />

            <TextView
                android:id="@+id/setbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:text="设置"
                android:textColor="#fff"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView11"
                android:layout_toStartOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录|注销"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_alignTop="@+id/selse_studentname"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#fff"/>


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.3"
        android:orientation="vertical"
        android:background="#fff">
        <!--上半部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.1"
                >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.2"
                android:padding="3dp"
                >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/st"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="3dp"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/c1"
                    android:background="#60d8d4"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="3dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/c2"
                    android:background="#fb8b7a"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="3dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/c3"
                    android:background="#fbb750"
                    />

            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.9"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.2"
                    android:padding="3dp">


                    <ImageView
                        android:id="@+id/preview_and_guidance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/c4"
                        android:background="#60c019"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:padding="3dp">
                    <ImageView
                        android:id="@+id/text_work_and_exercise"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/c5"
                        android:background="#60c019"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:padding="3dp"
                    >
                    <ImageView
                        android:id="@+id/cqvl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/c6"
                        android:background="#60c019"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <!--下半部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.1"
                android:padding="3dp">
                <ImageView
                    android:id="@+id/subject_tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/c7"
                    android:background="#60c019"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.1"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:padding="3dp"
                    >
                    <ImageView
                        android:id="@+id/wrong_book_system"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/c8"
                        android:background="#60c019"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:padding="3dp"
                    >

                    <ImageView
                        android:id="@+id/mynetdisc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/c11"
                        android:background="#60c019"
                        />


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:padding="3dp"
                        >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/c9"
                        android:background="#60c019"
                        />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:padding="3dp"
                        >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:src="@drawable/c10"
                        android:background="#60c019"
                        />
                    </LinearLayout>
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:padding="3dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/c12"
                        android:background="#60c019"
                        />

                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="3dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/c13"
                    android:background="#60c019"
                    />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>