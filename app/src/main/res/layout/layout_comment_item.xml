<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_student_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            />
        <TextView
            android:id="@+id/item_student_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            />
        <TextView
            android:id="@+id/item_student_commentor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            />
        <TextView
            android:id="@+id/item_student_commentLanmu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            />
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
           >
            <TextView
                android:id="@+id/item_student_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_comment_item_click"
                />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>