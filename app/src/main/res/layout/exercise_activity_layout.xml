<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/show_exercise_Top_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:background="#66ff8c">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="题型:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11dp"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:text="吃饭的艺术"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_test_type"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp" />

            <TextView
                android:text="知识点:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:id="@+id/textView5"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/exercise_test_type"
                android:layout_toEndOf="@+id/exercise_test_type"
                android:layout_marginStart="22dp" />

            <TextView
                android:text="怎么用舌头咬馍馍"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_knowledgePointName"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView5"
                android:layout_toEndOf="@+id/textView5"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />




            <TextView
                android:text="难度等级:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_alignBaseline="@+id/exercise_knowledgePointName"
                android:layout_alignBottom="@+id/exercise_knowledgePointName"
                android:layout_toRightOf="@+id/exercise_knowledgePointName"
                android:layout_toEndOf="@+id/exercise_knowledgePointName"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp" />

            <ImageView
                android:id="@+id/exercise_xingxingimageView"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toRightOf="@+id/textView9"
                android:src="@drawable/yikexing"
                android:layout_alignTop="@+id/textView9"
                android:layout_alignBottom="@+id/textView9" />


        </RelativeLayout>

            ></LinearLayout>

        <LinearLayout
            android:id="@+id/show_exercise_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.2"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>


</LinearLayout>